{
  "config": {
    "ansi-colors": true,
    "fail-on-first-error": false,
    "plugins": [],
    "verbosity": "normal",
    "run": {
      "mode": "docker",
      "exec": "docker compose exec php"
    }
  },
  "commit-msg": {
    "enabled": true,
    "actions": [
        {
            "action": "\\Ramsey\\CaptainHook\\ValidateConventionalCommit",
              "config": {
                "label": "üëÆ Validation du commit message"
              }
        }
    ]
  },
  "pre-push": {
      "enabled": true,
      "actions": [
          {
              "action": "composer analyze",
              "config": {
                "label": "üî¨ Analyse statique approfondie du code"
              }
          }
      ]
  },
  "pre-commit": {
      "enabled": true,
      "actions": [
          {
            "action": "composer lint:syntax",
              "config": {
                "label": "‚úÖ V√©rification de la syntaxe PHP"
              },
              "conditions": [
                  {
                      "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                      "args": [["php", "twig", "yaml", "yml"]]
                  }
              ]
          },
          {
            "action": "composer lint:style -- {$STAGED_FILES|of-type:php}",
              "config": {
                "label": "üé® Analyse du style de code (PSR-12)"
              },
              "conditions": [
                  {
                      "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                      "args": ["php"]
                  }
              ]
          }
      ]
  },
  "prepare-commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\Ramsey\\CaptainHook\\PrepareConventionalCommit",
                "config": {
                  "label": "üñäÔ∏è Pr√©paration du commit message"
                }
            }
        ]
    }
}
