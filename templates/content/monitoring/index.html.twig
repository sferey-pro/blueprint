{% extends 'base.html.twig' %}

{% block title %}Supervision{% endblock %}

{% block content %}
<div class="bg-slate-50 min-h-screen">
    <main class="container mx-auto px-4 py-8">
        <header class="mb-8">
            <h1 class="text-3xl font-bold tracking-tight text-slate-900">Supervision de l'Activité</h1>
            <p class="mt-2 text-sm text-slate-600">Vue d'ensemble des indicateurs clés du projet.</p>
        </header>

        <section>
            <h2 class="text-xl font-semibold leading-6 text-slate-800 border-b pb-2 mb-4">Contexte "Greeting"</h2>
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
                {# Card "Total" #}
                <div class="bg-white rounded-xl border bg-card text-card-foreground shadow">
                    <div class="p-6 flex flex-row items-center justify-between space-y-0 pb-2">
                        <h3 class="tracking-tight text-sm font-medium text-slate-500">Total des Messages</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="h-4 w-4 text-muted-foreground"><path d="M22 12h-4l-3 9L9 3l-3 9H2"></path></svg>
                    </div>
                    <div class="p-6 pt-0">
                        <div class="text-2xl font-bold">{{ greetingStats.total }}</div>
                        <p class="text-xs text-muted-foreground text-slate-500">Nombre total de messages créés.</p>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>
{% endblock %}
