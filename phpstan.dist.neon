includes:
    - phpstan-baseline.neon
    - tools/phpstan/vendor/phpstan/phpstan-doctrine/extension.neon
    - tools/phpstan/vendor/phpstan/phpstan-symfony/extension.neon
    - tools/phpstan/vendor/phpstan/phpstan-phpunit/extension.neon
    - tools/phpstan/vendor/phpstan/phpstan-symfony/rules.neon

parameters:
    tmpDir: ./var/.phpstan.cache
    doctrine:
        objectManagerLoader: tests/object-manager.php

    level: 8

    paths:
        - bin
        - config
        - public
        - src
        - tests
    excludePaths:
        - src/DataFixtures/

    symfony:
        containerXmlPath: var/cache/dev/App_KernelDevDebugContainer.xml
        constantHassers: false
    bootstrapFiles:
        - vendor/autoload.php
        - src/Kernel.php
